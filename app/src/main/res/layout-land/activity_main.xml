<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:screenOrientation="landscape"
    android:background="@drawable/background"
    android:theme="@android:style/Theme.Black.NoTitleBar"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/alfa_slab_one"
            android:text="@string/pingVi_math"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="250dp"
            android:layout_height="267dp"
            android:screenOrientation="landscape"
            android:src="@drawable/penguin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/Logo" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/button_fold"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_marginLeft="270dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="50dp"

                android:textSize="24sp"
                android:layout_marginVertical="100dp"
                android:text = "@string/fold" />

            <Button
                android:id="@+id/button_compare"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_marginTop="50dp"
                android:layout_marginVertical="100dp"
                android:textSize="24sp"
                android:text="@string/compare" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/button_substract"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:textSize="23sp"
                android:layout_marginLeft="270dp"
                android:layout_marginRight="30dp"
                android:text="@string/substract" />

            <Button
                android:id="@+id/button_selection"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_marginTop="-15dp"
                android:text="@string/selection"
                android:textSize="22sp"

                />
        </TableRow>

    </TableLayout>


</RelativeLayout>












